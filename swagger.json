{
    "openapi": "3.0.0",
    "info": {
        "title": "API Pizzaria",
        "description": "API de uma Pizzaria contendo vários CRUDS e assuntos",
        "contact": {
            "name": "Pedro Lucas",
            "email": "siqueirafernandes02@gmail.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8080/",
            "description": "API de teste local"
        }
    ],
    "paths": {
        "/usuario/findAll": {
            "get":{
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "summary": "Lista todos os Usuários da API",
                "description": "Rota tem como finalidade listar todos os usuários que foram criados ao longo da utilização da API",
                "tags": ["Usuário"],
                "responses": {
                    "200": {
                        "description": "Ok!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "$ref": "#/components/schemas/Usuario"
                                    }
                                }
                            } 
                        }
                    },
                    "500": {
                        "description": "Internal Server Error: Erro no Servidor",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "String"
                                        }
                                    }
                                }
                            } 
                        }
                    },
                    "401": {
                        "description": "Unauthorized: Erro de Autenticação",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "String"
                                        }
                                    }
                                }
                            } 
                        }
                    }
                }
            }
        },
        "/usuario/find": {
            "get":{
                "summary": "Lista o Usuário escolhido na API",
                "description": "Utiliza um ID para trazer um usuario especifico",
                "tags": ["Usuário"],
                "responses": {
                    "200": {
                        "description": "Ok!"
                    }
                }
            }
        }
    },
    "components":{
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        },
        "schemas": {
            "Usuario": {
                "type": "object",
                "properties": {
                    "nome":{
                        "type": "String"
                    },
                    "numero":{
                        "type": "String"
                    },
                    "email":{
                        "type": "String"
                    },
                    "senha":{
                        "type": "String"
                    },
                    "endereco":{
                        "type": "array",
                        "items": {
                            "properties": {
                                "rua":{
                                    "type": "String"
                                },
                                "numero":{
                                    "type": "String"
                                },
                                "complemento":{
                                    "type": "String"
                                },
                                "createdAt":{
                                    "type": "String"
                                }
                            }
                        }
                    },
                    "pedido": {
                        "type": "array",
                        "items": {
                            "properties": {
                                "_id":{
                                    "type": "String"
                                },
                                "createdAt":{
                                    "type": "String"
                                } 
                            }
                        }
                    },
                    "createdAt": {
                        "createdAt":{
                            "type": "String"
                        }
                    },
                    "admin":{
                        "type": "Boolean"
                    }
                }
            }
        }
    }
}